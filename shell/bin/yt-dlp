#!/usr/bin/env nix-shell
#! nix-shell -i bash -p yt-dlp

# Universal Video Downloader (yt-dlp wrapper)
# Supports YouTube, X/Twitter, Instagram, TikTok, Reddit, Vimeo, and 1000+ sites
# Usage: ./download-video.sh [URL]

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Default settings
OUTPUT_DIR="$HOME/videos"
OUTPUT_TEMPLATE="%(uploader)s_%(upload_date)s_%(id)s.%(ext)s"
QUALITY="best"

# Function to display usage
usage() {
    echo "Usage: $0 [OPTIONS] [URL]"
    echo ""
    echo "Universal video downloader supporting 1000+ sites including:"
    echo "  • YouTube, X/Twitter, Instagram, TikTok, Reddit"
    echo "  • Vimeo, Facebook, Twitch, Dailymotion"
    echo "  • And many more..."
    echo ""
    echo "Options:"
    echo "  -o, --output DIR       Output directory (default: ~/videos)"
    echo "  -q, --quality QUALITY  Video quality (default: best)"
    echo "                         Options: best, worst, bestvideo+bestaudio"
    echo "  -f, --format FORMAT    Output filename template"
    echo "                         (default: %(uploader)s_%(upload_date)s_%(id)s.%(ext)s)"
    echo "  -l, --list             List all supported sites"
    echo "  -h, --help            Show this help message"
    echo ""
    echo "Examples:"
    echo "  $0 https://youtube.com/watch?v=dQw4w9WgXcQ"
    echo "  $0 https://x.com/user/status/123456789"
    echo "  $0 -o ~/Downloads -q best https://www.tiktok.com/@user/video/123"
    exit 1
}

# List supported sites
list_sites() {
    echo -e "${BLUE}Fetching list of supported sites...${NC}"
    echo ""
    yt-dlp --list-extractors
    exit 0
}

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
    -o | --output)
        OUTPUT_DIR="$2"
        shift 2
        ;;
    -q | --quality)
        QUALITY="$2"
        shift 2
        ;;
    -f | --format)
        OUTPUT_TEMPLATE="$2"
        shift 2
        ;;
    -l | --list)
        list_sites
        ;;
    -h | --help)
        usage
        ;;
    *)
        URL="$1"
        shift
        ;;
    esac
done

# Check if URL is provided
if [ -z "$URL" ]; then
    echo -e "${RED}Error: No URL provided${NC}"
    echo ""
    read -p "Enter video URL: " URL

    if [ -z "$URL" ]; then
        echo -e "${RED}Error: URL cannot be empty${NC}"
        exit 1
    fi
fi

# Basic URL validation
if [[ ! "$URL" =~ ^https?:// ]]; then
    echo -e "${YELLOW}Warning: URL doesn't start with http:// or https://${NC}"
    echo "Attempting download anyway..."
    echo ""
fi

# Create output directory if it doesn't exist
mkdir -p "$OUTPUT_DIR"

# Build output path template
OUTPUT_PATH="${OUTPUT_DIR}/${OUTPUT_TEMPLATE}"

echo -e "${GREEN}Starting download...${NC}"
echo -e "${YELLOW}URL:${NC} $URL"
echo -e "${YELLOW}Output:${NC} $OUTPUT_DIR"
echo -e "${YELLOW}Quality:${NC} $QUALITY"
echo ""

# Download the video
yt-dlp \
    --format "$QUALITY" \
    --output "$OUTPUT_PATH" \
    --no-playlist \
    --progress \
    "$URL"

if [ $? -eq 0 ]; then
    echo ""
    echo -e "${GREEN}✓ Download completed successfully!${NC}"
    echo -e "${YELLOW}Files saved to:${NC} $OUTPUT_DIR"
else
    echo ""
    echo -e "${RED}✗ Download failed${NC}"
    exit 1
fi
